{
  "manifest_version": 3,
  "name": "Synapse Highlighter",
  "description": "Save highlighted snippets to Synapse with a single click.",
  "version": "0.1.0",
  "action": {
    "default_title": "Synapse",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:3000/*", "https://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

