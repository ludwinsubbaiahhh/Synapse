
{
  "manifest_version": 3,
  "name": "Synapse Saver",
  "description": "Select text, click the bubble, and save to Synapse.",
  "version": "0.1.0",
  "permissions": ["storage"],
  "host_permissions": ["http://localhost/*", "http://127.0.0.1/*", "https://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}